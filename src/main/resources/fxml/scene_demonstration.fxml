<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>
<?import org.tbee.javafx.scene.layout.fxml.MigPane?>
<?import javafx.scene.layout.StackPane?>

<MigPane
  fx:id="rootLayout"
  xmlns:fx="http://javafx.com/fxml/1"
  stylesheets="@/styles/styles.css,@/styles/scene_demonstration.css"
  layout="insets 10">
  <MigPane MigPane.cc="grow">
    <StackPane
      style="-fx-background-color: black;"
      MigPane.cc="span 3,wrap">
      <Canvas
        fx:id="canvas"
        width="870"
        height="550" />
    </StackPane>
    <Slider
      fx:id="timeSlider"
      MigPane.cc="span 3,grow,wrap" />
    <StackPane MigPane.cc="span 3,grow">
      <Label
        fx:id="timeElapsedLabel"
        text="Time elapsed: 0s"
        StackPane.alignment="CENTER_LEFT"
        MigPane.cc="alignx left" />
      <Button
        fx:id="playbackButton"
        onMouseClicked="#onPlaybackClicked"
        text="â–¯â–¯"
        StackPane.alignment="CENTER" />
      <Spinner
        fx:id="fpsInput"
        StackPane.alignment="CENTER_RIGHT">
        <valueFactory>
          <SpinnerValueFactory.IntegerSpinnerValueFactory
            min="1"
            max="100"
            initialValue="30"
            amountToStepBy="1" />
        </valueFactory>
        <editable>true</editable>
      </Spinner>
    </StackPane>
  </MigPane>
  <VBox MigPane.cc="grow,push">
    <BarChart
      fx:id="boltzmannChart"
      legendVisible="false"
      prefWidth="240"
      prefHeight="213"
      animated="false">
      <xAxis>
        <CategoryAxis side="BOTTOM" label="height, m" />
      </xAxis>
      <yAxis>
        <NumberAxis side="LEFT" label="particles, N" />
      </yAxis>
    </BarChart>
    <LineChart
      fx:id="lineChart"
      createSymbols="false"
      prefWidth="240"
      prefHeight="213"
      animated="false">
      <xAxis>
        <NumberAxis side="BOTTOM" label="velocity, m/s" />
      </xAxis>
      <yAxis>
        <NumberAxis side="LEFT" label="particles density" />
      </yAxis>
    </LineChart>
    <BarChart
      fx:id="particlesNumBar"
      prefWidth="240"
      prefHeight="213"
      animated="false">
      <xAxis>
        <CategoryAxis side="BOTTOM" />
      </xAxis>
      <yAxis>
        <NumberAxis side="LEFT" label="particles, N" />
      </yAxis>
    </BarChart>
  </VBox>
  <VBox MigPane.cc="grow,push">
    <LineChart
      fx:id="leftPartLine"
      title="Left part"
      createSymbols="false"
      prefWidth="240"
      prefHeight="213"
      animated="false">
      <xAxis>
        <NumberAxis side="BOTTOM" label="t, sec" />
      </xAxis>
      <yAxis>
        <NumberAxis side="LEFT" label="N" />
      </yAxis>
    </LineChart>
    <LineChart
      fx:id="rightPartLine"
      title="Right part"
      createSymbols="false"
      prefWidth="240"
      prefHeight="213"
      animated="false">
      <xAxis>
        <NumberAxis side="BOTTOM" label="t, sec" />
      </xAxis>
      <yAxis>
        <NumberAxis side="LEFT" label="N" />
      </yAxis>
    </LineChart>
  </VBox>
</MigPane>

